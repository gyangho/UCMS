      // í˜ì´ì§€ ë¡œë“œ ì‹œ ë©´ì ‘ ê³„íš ìƒì„¸ ì •ë³´ í‘œì‹œ
      document.addEventListener('DOMContentLoaded', displayPlanDetail);
    </script>
